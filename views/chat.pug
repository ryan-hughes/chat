extends layout

block content
	div(id='header')
		button(id='btnLogout', class='btn btn-secondary btn-lg') Logout
		p(style='display: inline; margin-left: 50px;') Logged in as:  
			strong(id='username')= username
	
	div(class='container-fluid')
		div(class='row')
			div(class='col-sm-2')
			div(class='col-sm-7', id='chatContainer')
				div(id='chatBox', class='well')
					ul(id='messages')
				div(class='input-group')
					input(id='msgInput', autocomplete='off', class='form-control')
					span(class='input-group-btn')
						button(id='btnSend', class='btn btn-secondary') Send
			div(class='col-sm-3')
				div(id='onlineUsersBox', class='well')
					strong Online Users
					p(id='onlineUsers')
	div(id='footer', class="text-center")

		p(style='display: inline; position: absolute; margin-top: 6px; left: 50px;')
			strong Created by #[a(href='http://ryanhugs.com') Ryan Hughes] in Node.js, Express & Socket.io :) #[a(href='https://github.com/ryan-hughes/chat', style='margin-left: 10px; font-size: 13px;', target="_blank") source]

		div(id='contactGroup', style='float:right; margin-right: 10px;')
			a(href='https://www.facebook.com/ryan.hughes.79827', target="_blank", class="btn btn-social-icon btn-facebook", style='margin-right: 5px;')
				span(class="fa fa-facebook")
			a(href='https://github.com/ryan-hughes', target="_blank", class="btn btn-social-icon btn-github", style='margin-right: 5px;')
				span(class="fa fa-github")
			a(href='https://www.linkedin.com/in/ryan-hughes-44155b3b/', target="_blank",  class="btn btn-social-icon btn-linkedin", style='margin-right: 5px;')
				span(class="fa fa-linkedin")
			a(href='https://twitter.com/rynhues', target="_blank", class="btn btn-social-icon btn-twitter")
				span(class="fa fa-twitter")

			
	script(src="/socket.io/socket.io.js")
	script(src="/javascripts/chat.js")